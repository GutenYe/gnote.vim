#!/usr/bin/env ruby

require_relative "../lib/gnote"

begin
  GNote::CLI.start
rescue GNote::Error => e
  GNote.ui.error e.message
  GNote.ui.debug e.backtrace.join("\n")
  exit 1
rescue Interrupt => e
  GNote.ui.error "\nQuitting..."
  GNote.ui.debug e.backtrace.join("\n")
  exit 1
rescue Exception => e
  raise e
  exit 1
end
